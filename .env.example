# Google Maps API Key
# Get your key here: https://console.cloud.google.com/google/maps-apis/credentials
VITE_GOOGLE_MAPS_API_KEY=

# Analytics
VITE_ANALYTICS_ENDPOINT=https://analytics.example.com
VITE_ANALYTICS_WEBSITE_ID=

# Database
# DATABASE_URL=mysql://user:password@host:port/db
DATABASE_URL=

# Owner/admin identity (server)
# Recommended: set your real owner email/phone. Any magic-link login that matches becomes admin.
OWNER_EMAIL=
OWNER_PHONE=
# Legacy fallback (optional)
OWNER_OPEN_ID=

# Public app URL (server) - used for generating magic-link URLs
# Local dev example: http://localhost:5173
PUBLIC_APP_URL=

# MotorWeb OAuth2 (client credentials) for market-data APIs (rego lookup)
# Test: https://api.tst.motorweb.app
# Prod: https://api.motorweb.app
MOTORWEB_API_BASE_URL=https://api.motorweb.app
MOTORWEB_CLIENT_ID=
MOTORWEB_CLIENT_SECRET=

# MotorWeb Robot (mTLS) for admin reports (BVI/VIR/CCR)
# Recommended for cloud deployments: base64 encode the .p12 and store as env var
MOTORWEB_ROBOT_BASE_URL=https://robot.motorweb.co.nz
MOTORWEB_ROBOT_P12_BASE64=
MOTORWEB_ROBOT_P12_PASSPHRASE=
# Alternative for local/self-host: point to a local file path
MOTORWEB_ROBOT_P12_PATH=

# Stripe Payment Processing
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Email (Resend)
RESEND_API_KEY=
ADMIN_EMAIL=your-email@example.com
FROM_EMAIL=bookings@yourdomain.com

# Google Calendar Integration
# Create a service account in Google Cloud Console
# Download the JSON key and paste it as a single-line string
GOOGLE_SERVICE_ACCOUNT_JSON=
# The calendar ID to create events in (can be "primary" or a specific calendar ID)
# Share the calendar with the service account email address
GOOGLE_CALENDAR_ID=primary

# ============================================
# PREPAID BOOKING SYSTEM
# ============================================

# SMS Notifications (Optional - defaults to console logging)
# Provider: 'twilio' or 'console'
SMS_PROVIDER=console
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# Business Hours Configuration (Optional - defaults shown)
# Times in 24-hour format, timezone is Pacific/Auckland
BUSINESS_OPEN_TIME=09:00
BUSINESS_CLOSE_TIME=17:00
BUSINESS_LAST_BOOKING_TIME=15:30
JOB_DURATION_MINUTES=90
BOOKING_BUFFER_MINUTES=30
MAX_BOOKINGS_PER_DAY=4

# Service Pricing in NZD (Optional - defaults shown)
PPI_PRICE_NZD=180
ADDON_PRIORITY_PRICE_NZD=50
ADDON_OUTSIDE_AREA_PRICE_NZD=30
ADDON_AFTER_HOURS_PRICE_NZD=75

# ============================================
# GOOGLE BUSINESS PROFILE & REVIEWS
# ============================================

# Google Review URL - Get this from your Google Business Profile
# Option 1: Short URL format (recommended)
# GOOGLE_REVIEW_URL=https://g.page/r/YOUR_PLACE_ID/review
# Option 2: Direct place ID format
# GOOGLE_REVIEW_URL=https://search.google.com/local/writereview?placeid=YOUR_PLACE_ID
GOOGLE_REVIEW_URL=
