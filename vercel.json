{
  "framework": "vite",
  "buildCommand": "pnpm build",
  "outputDirectory": "dist/client",
  "installCommand": "pnpm install",
  "cleanUrls": true,
  "trailingSlash": false,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!api/).*)",
      "destination": "/index.html"
    }
  ]
}