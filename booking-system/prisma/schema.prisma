generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================
// PLATE CACHE - MotorWeb lookup results
// ============================================
model PlateCache {
  plate       String   @id @db.VarChar(10)
  vehicleJson Json     @map("vehicle_json")
  cachedAt    DateTime @default(now()) @map("cached_at")
  expiresAt   DateTime @map("expires_at")
  lookupCount Int      @default(1) @map("lookup_count")

  @@index([expiresAt])
  @@map("plate_cache")
}

// ============================================
// QUOTE - Generated pricing quotes
// ============================================
model Quote {
  id                  String    @id @default(cuid())
  plate               String    @db.VarChar(10)
  vehicleSnapshotJson Json      @map("vehicle_snapshot_json")
  serviceType         String    @map("service_type") @db.VarChar(20)
  pricingBreakdownJson Json     @map("pricing_breakdown_json")
  totalIncGst         Int       @map("total_inc_gst") // cents
  createdAt           DateTime  @default(now()) @map("created_at")
  expiresAt           DateTime  @map("expires_at")
  
  bookings            Booking[]

  @@index([plate])
  @@index([createdAt])
  @@map("quote")
}

// ============================================
// BOOKING - Customer bookings
// ============================================
model Booking {
  id            String        @id @default(cuid())
  quoteId       String        @map("quote_id")
  customerName  String        @map("customer_name") @db.VarChar(100)
  customerEmail String        @map("customer_email") @db.VarChar(255)
  customerPhone String        @map("customer_phone") @db.VarChar(20)
  address       String        @db.VarChar(500)
  suburb        String        @db.VarChar(100)
  startTime     DateTime      @map("start_time")
  endTime       DateTime      @map("end_time")
  status        BookingStatus @default(PENDING_PAYMENT)
  holdExpiresAt DateTime?     @map("hold_expires_at")
  gearboxSynced Boolean       @default(false) @map("gearbox_synced")
  gearboxId     String?       @map("gearbox_id") @db.VarChar(100)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")

  quote         Quote         @relation(fields: [quoteId], references: [id])
  payments      Payment[]

  @@index([startTime])
  @@index([status])
  @@index([customerEmail])
  @@map("booking")
}

enum BookingStatus {
  PENDING_PAYMENT
  CONFIRMED
  CANCELLED
  EXPIRED
  COMPLETED
}

// ============================================
// PAYMENT - Stripe payment records
// ============================================
model Payment {
  id              String        @id @default(cuid())
  bookingId       String        @map("booking_id")
  stripeSessionId String        @unique @map("stripe_session_id") @db.VarChar(255)
  stripePaymentId String?       @map("stripe_payment_id") @db.VarChar(255)
  amountIncGst    Int           @map("amount_inc_gst") // cents
  status          PaymentStatus @default(PENDING)
  paymentMethod   String?       @map("payment_method") @db.VarChar(50) // card, afterpay_clearpay
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  booking         Booking       @relation(fields: [bookingId], references: [id])

  @@index([stripeSessionId])
  @@index([bookingId])
  @@map("payment")
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
  REFUNDED
}

// ============================================
// LOOKUP LOG - Rate limiting and audit
// ============================================
model LookupLog {
  id          String       @id @default(cuid())
  plateHash   String       @map("plate_hash") @db.VarChar(64) // SHA256 hash
  ipAddress   String       @map("ip_address") @db.VarChar(45)
  fingerprint String?      @db.VarChar(64) // Browser fingerprint hash
  source      LookupSource
  success     Boolean      @default(true)
  createdAt   DateTime     @default(now()) @map("created_at")

  @@index([ipAddress, createdAt])
  @@index([fingerprint, createdAt])
  @@index([createdAt])
  @@map("lookup_log")
}

enum LookupSource {
  CACHE
  MOTORWEB
  FALLBACK
}

// ============================================
// RATE LIMIT - Persistent rate limit tracking
// ============================================
model RateLimit {
  id        String   @id // ip:date or fingerprint:date
  count     Int      @default(0)
  expiresAt DateTime @map("expires_at")

  @@index([expiresAt])
  @@map("rate_limit")
}

// ============================================
// GEARBOX SYNC LOG - Integration audit trail
// ============================================
model GearboxSyncLog {
  id          String   @id @default(cuid())
  bookingId   String   @map("booking_id")
  requestJson Json     @map("request_json")
  responseJson Json?   @map("response_json")
  statusCode  Int?     @map("status_code")
  success     Boolean  @default(false)
  errorMsg    String?  @map("error_msg") @db.Text
  attempt     Int      @default(1)
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([bookingId])
  @@index([createdAt])
  @@map("gearbox_sync_log")
}

// ============================================
// BLOCKED IP - Security blacklist
// ============================================
model BlockedIp {
  ipAddress String   @id @map("ip_address") @db.VarChar(45)
  reason    String   @db.VarChar(255)
  blockedAt DateTime @default(now()) @map("blocked_at")
  expiresAt DateTime? @map("expires_at")

  @@map("blocked_ip")
}
